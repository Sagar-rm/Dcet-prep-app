#:import utils kivy.utils

<CustomButton@Button>:
    background_color: 0, 0, 0, 0
    canvas.before:
        Color:
            rgba: (0.2, 0.6, 1, 1) if self.state == 'normal' else (0.1, 0.5, 0.9, 1)
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

<QuizScreen>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#f0f0f0')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 15

        Label:
            text: f"Score: {root.current_score}/{root.total_questions}"
            font_size: 22
            color: utils.get_color_from_hex('#333333')
            size_hint_y: None
            height: 40

        ProgressBar:
            max: 15
            value: root.time_left
            size_hint_y: None
            height: 10
            background_color: utils.get_color_from_hex('#cccccc')
            color: utils.get_color_from_hex('#4CAF50')

        Label:
            text: root.question_text
            font_size: 24
            text_size: self.width, None
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'
            color: utils.get_color_from_hex('#333333')
            padding: 20, 20

        BoxLayout:
            orientation: 'vertical'
            spacing: 15
            size_hint_y: None
            height: self.minimum_height

            CustomButton:
                text: root.options[0] if len(root.options) > 0 else ''
                on_release: root.check_answer(self.text)
                size_hint_y: None
                height: 60
                font_size: 18

            CustomButton:
                text: root.options[1] if len(root.options) > 1 else ''
                on_release: root.check_answer(self.text)
                size_hint_y: None
                height: 60
                font_size: 18

            CustomButton:
                text: root.options[2] if len(root.options) > 2 else ''
                on_release: root.check_answer(self.text)
                size_hint_y: None
                height: 60
                font_size: 18

            CustomButton:
                text: root.options[3] if len(root.options) > 3 else ''
                on_release: root.check_answer(self.text)
                size_hint_y: None
                height: 60
                font_size: 18

        Label:
            id: feedback
            text: ''
            font_size: 22
            color: 0, 1, 0, 1
            size_hint_y: None
            height: 40
            opacity: 0

        CustomButton:
            id: next_button
            text: 'Next Question'
            on_release: root.next_question()
            disabled: True
            size_hint_y: None
            height: 60
            font_size: 20

<ResultScreen>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#f0f0f0')
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        Label:
            text: 'Round Completed!'
            font_size: 32
            color: utils.get_color_from_hex('#333333')

        Label:
            text: f'Round Score: {root.round_score}/5'
            font_size: 24
            color: utils.get_color_from_hex('#4CAF50')

        Label:
            text: f'Total Score: {root.total_score}/{root.total_questions}'
            font_size: 24
            color: utils.get_color_from_hex('#2196F3')

        Widget:
            size_hint_y: None
            height: 40

        CustomButton:
            text: 'Start New Round'
            on_release: root.start_new_round()
            size_hint_y: None
            height: 60
            font_size: 20

        CustomButton:
            text: 'Quit'
            on_release: app.stop()
            size_hint_y: None
            height: 60
            font_size: 20
            background_color: utils.get_color_from_hex('#F44336')